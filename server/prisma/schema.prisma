// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema



generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id                Int                @id @default(autoincrement())
  name              String
  email             String             @unique
  phone             String?
  password          String
  role              String             @default("customer") // customer/admin/staff
  bookings          Booking[]
  reviews           Review[]
  notifications     Notification[]
  housekeepingTasks HousekeepingTask[]
  adminLogs         AdminLog[]
  auditLogs         AuditLog[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model Hotel {
  id           Int           @id @default(autoincrement())
  name         String
  address      String
  city         String
  country      String
  description  String?
  rating       Float?
  roomTypes    RoomType[]
  rooms        Room[]
  bookings     Booking[]
  reviews      Review[]
  hotelBranches HotelBranch[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model RoomType {
  id          Int         @id @default(autoincrement())
  hotel       Hotel       @relation(fields: [hotelId], references: [id])
  hotelId     Int
  name        String
  description String?
  maxGuests   Int
  basePrice   Float
  rooms       Room[]
  roomPrices  RoomPrice[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Room {
  id                 Int                  @id @default(autoincrement())
  hotel              Hotel                @relation(fields: [hotelId], references: [id])
  hotelId            Int
  hotelBranch        HotelBranch?         @relation(fields: [hotelBranchId], references: [id])
  hotelBranchId      Int?
  roomType           RoomType             @relation(fields: [roomTypeId], references: [id])
  roomTypeId         Int
  roomNumber         String
  floor              Int
  status             String               // available/booked/maintenance
  bookingItems       BookingItem[]
  housekeepingTasks  HousekeepingTask[]
  availabilitySlots  AvailabilitySlot[]
  maintenanceRequests MaintenanceRequest[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}

model Booking {
  id            Int            @id @default(autoincrement())
  user          User           @relation(fields: [userId], references: [id])
  userId        Int
  hotel         Hotel          @relation(fields: [hotelId], references: [id])
  hotelId       Int
  checkIn       DateTime
  checkOut      DateTime
  totalAmount   Float
  status        String         // pending/confirmed/cancelled
  bookingItems  BookingItem[]
  payment       Payment?
  cancellation  Cancellation?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model BookingItem {
  id           Int       @id @default(autoincrement())
  booking      Booking   @relation(fields: [bookingId], references: [id])
  bookingId    Int
  room         Room      @relation(fields: [roomId], references: [id])
  roomId       Int
  pricePerNight Float
  nights       Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Payment {
  id            Int       @id @default(autoincrement())
  booking       Booking   @relation(fields: [bookingId], references: [id])
  bookingId     Int       @unique
  amount        Float
  method        String    // card, upi, netbanking
  status        String    // paid, failed, refunded
  transactionId String?
  createdAt     DateTime  @default(now())
}

model HousekeepingTask {
  id          Int       @id @default(autoincrement())
  room        Room      @relation(fields: [roomId], references: [id])
  roomId      Int
  taskName    String
  assignedTo  User?     @relation(fields: [assignedToId], references: [id])
  assignedToId Int?
  status      String    // pending, done
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Review {
  id        Int       @id @default(autoincrement())
  hotel     Hotel     @relation(fields: [hotelId], references: [id])
  hotelId   Int
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  rating    Int
  comment   String?
  createdAt DateTime  @default(now())
}

model Notification {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  message     String
  readStatus  Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model AdminLog {
  id          Int       @id @default(autoincrement())
  admin       User      @relation(fields: [adminId], references: [id])
  adminId     Int
  action      String
  description String?
  createdAt   DateTime  @default(now())
}

model HotelBranch {
  id        Int       @id @default(autoincrement())
  hotel     Hotel     @relation(fields: [hotelId], references: [id])
  hotelId   Int
  name      String
  address   String
  city      String
  country   String
  rooms     Room[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model RoomPrice {
  id          Int       @id @default(autoincrement())
  roomType    RoomType  @relation(fields: [roomTypeId], references: [id])
  roomTypeId  Int
  startDate   DateTime
  endDate     DateTime
  price       Float
  createdAt   DateTime  @default(now())
}

model AvailabilitySlot {
  id           Int       @id @default(autoincrement())
  room         Room      @relation(fields: [roomId], references: [id])
  roomId       Int
  date         DateTime
  isAvailable  Boolean   @default(true)
  createdAt    DateTime  @default(now())
}

model Cancellation {
  id           Int       @id @default(autoincrement())
  booking      Booking   @relation(fields: [bookingId], references: [id])
  bookingId    Int       @unique
  reason       String?
  refundAmount Float?
  createdAt    DateTime  @default(now())
}

model AuditLog {
  id        Int       @id @default(autoincrement())
  user      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  action    String
  metadata  String?
  createdAt DateTime  @default(now())
}

model AnalyticsBookingDaily {
  id            Int       @id @default(autoincrement())
  date          DateTime
  totalBookings Int
  totalRevenue  Float
  createdAt     DateTime  @default(now())
}

model PromoCode {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  discount    Float
  validFrom   DateTime
  validTo     DateTime
  usageLimit  Int?
  createdAt   DateTime  @default(now())
}

model Tax {
  id          Int       @id @default(autoincrement())
  name        String
  percentage  Float
  createdAt   DateTime  @default(now())
}

model MaintenanceRequest {
  id          Int       @id @default(autoincrement())
  room        Room      @relation(fields: [roomId], references: [id])
  roomId      Int
  issue       String
  status      String    @default("pending") // pending, in_progress, done
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
